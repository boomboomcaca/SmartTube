<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smb_config"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp">

    <EditText
        android:id="@+id/smb_server_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/smb_server_url_hint"
        android:imeOptions="actionNext"
        android:inputType="textUri|textPersonName"
        android:textColor="@color/dialog_text_color"
        android:textCursorDrawable="@null"
        android:backgroundTint="@color/dialog_text_color"
        android:textColorHint="@color/white_50" />

    <EditText
        android:id="@+id/smb_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/smb_username_hint"
        android:imeOptions="actionNext"
        android:inputType="textPersonName"
        android:textColor="@color/dialog_text_color"
        android:textCursorDrawable="@null"
        android:backgroundTint="@color/dialog_text_color"
        android:textColorHint="@color/white_50" />

    <EditText
        android:id="@+id/smb_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/smb_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColor="@color/dialog_text_color"
        android:textCursorDrawable="@null"
        android:backgroundTint="@color/dialog_text_color"
        android:textColorHint="@color/white_50" />

    <TextView
        android:id="@+id/smb_config_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:lines="5"
        android:textColor="@color/dialog_text_color"
        android:padding="5dp" />
</LinearLayout> 